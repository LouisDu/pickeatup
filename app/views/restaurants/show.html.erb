<div class="container">
  <h1 class="text-center">Interface restaurant</h1>
  <div class="row">
    <div class="col-xs-6">
      <h3 class="text-center">Vos commandes</h3>
      <div class="row text-center">
        <div class="col-xs-1"><p><strong>N°</strong></p></div>
        <div class="col-xs-2"><p><strong>Client</strong></p></div>
        <div class="col-xs-2"><p><strong>Pick Up</strong></p></div>
        <div class="col-xs-2"><p><strong>Montant</strong></p></div>
        <div class="col-xs-3"><p><strong>Status</strong></p></div>
        <div class="col-xs-2"></div>
      </div>
      <% Order.all.reverse.each do |order| %>
        <% if order.order_lines.first.meal.restaurant == @restaurant %>
          <%= render 'restaurants/order_restaurant_owner', order: order %>
        <% end %>
      <% end %>

    </div>
    <div class="col-xs-6">
      <h3 class="text-center">Votre restaurant</h3>
      <%= render 'restaurants/restaurant_card', restaurant: @restaurant %>
      <h3 class="text-center">Vos plats au menu</h3>
      <div class="row">
        <div class="col-xs-2">
          <div class="row">
            <div class="col-xs-12">
              <div class="col-xs-3"><p><strong>N°</strong></p></div>
            </div>
          </div>
        </div>
        <div class="col-xs-10">
          <div class="row">
            <div class="col-xs-3"><p><strong>Nom</strong></p></div>
            <div class="col-xs-3"><p><strong>Prep.</strong></p></div>
            <div class="col-xs-3"><p><strong>Prix</strong></p></div>
            <div class="col-xs-3"><p><strong>Photo</strong></p></div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <% if @restaurant.meals.blank? %>
              There is no meal
          <% else %>
            <% @restaurant.meals.each do |meal| %>
                <%= render 'meals/meal_card_owner', meal: meal %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="row padded">
        <div class="col-xs-12 text-center">
          <%= link_to 'Nouveau plat', new_restaurant_meal_path(@restaurant), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
