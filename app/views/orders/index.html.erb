<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h3>Historique des commandes</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <% if @orders.nil? %>
          <p>Vous n'avez pas commande</p>
      <% else %>
        <% @orders.each do |order| %>
          <%= render 'orders/order_card', order: order %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
