<div class="container ticket">
  <div class="row">
      <div class="col-xs-12">
        <div class="row">
          <div class="col-xs-4">Date: <%= order.created_at.strftime("%d %b. %Y")%></div>
          <div class="col-xs-5"></div>
          <div class="col-xs-3"></div>
        </div>
        <hr>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="row">
          <div class="col-xs-4">Quantité</div>
          <div class="col-xs-5">Nom</div>
          <div class="col-xs-3">Prix unitaire</div>
        </div>
        <hr>
          <% order.order_lines.each do |order_line| %>
          <div class="row ticket-line">
              <!-- meal quantity -->
            <div class="col-xs-4">
              <p class="quantity">
                <%= order_line.meal_quantity %>
              </p>
            </div>
            <div class="col-xs-5">
              <p>
                <%= order_line.meal.name %>
              </p>
            </div>
            <div class="col-xs-3"><p><%= order_line.meal_price %> €</p></div>
          </div>
        <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <hr>
      <div class="row">
        <div class="col-xs-8">Pick Up Time:  <%= order.pick_up_time.strftime("%H:%M")%></div>
        <div class="col-xs-1"></div>
        <div class="col-xs-3">Total: <%= order.bill %> €</div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <hr>
      <p><strong>Restaurant: </strong><%= order.order_lines.last.meal.restaurant.name %></p>
      <p><strong>Address: </strong><%= order.order_lines.last.meal.restaurant.address %></p>
    </div>
  </div>
</div>
