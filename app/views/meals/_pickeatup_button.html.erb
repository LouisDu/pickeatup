<%= simple_form_for @cart, url: add_to_cart_meals_path, method: :post  do |form| %>
  <%= form.input :meal_quantity, as: :hidden, input_html: { value: 1 } %>
  <%= form.input :meal_price, as: :hidden, input_html: { value: meal.price } %>
