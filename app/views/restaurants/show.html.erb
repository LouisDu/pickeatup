<div class="container">
      <h1 class="text-center">Interface restaurant</h1>
  <div class="row">
    <div class="col-xs-6">
      <h3 class="text-center">Vos commandes</h3>
      <% Order.all.reverse.each do |order| %>
        <% if order.order_lines.first.meal.restaurant == @restaurant %>
          <%= render 'restaurants/order_restaurant_owner', order: order %>
        <% end %>
      <% end %>

    </div>
    <div class="col-xs-6">
      <h3 class="text-center">Votre restaurant</h3>
      <%= render 'restaurants/restaurant_card', restaurant: @restaurant %>
      <h3 class="text-center">Vos plats au menu</h3>
      <div class="row">
        <div class="col-xs-12">
          <% if @restaurant.meals.blank? %>
              There is no meal
          <% else %>
            <% @restaurant.meals.each do |meal| %>
              <div class="col-xs-6">
                <%= render 'meals/meal_card_owner', meal: meal %>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="col-xs-12">
          <%= link_to 'Add a meal', new_restaurant_meal_path(@restaurant) %>
        </div>
      </div>
    </div>

  </div>
</div>
