<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <input type="text" class="form-control" placeholder="localisation">
    </div>
    <div class="col-xs-3">
      <input type="text" class="form-control" placeholder="Type de plat">
    </div>
    <div class="col-xs-4">
      <input type="text" class="form-control" placeholder="prix">
    </div>
    <div class="col-xs-2">
      <input class="btn btn-default" type="submit" value="Pick Eat Up">
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-xs-6">
      <div class="row">
        <% if @meals.blank? %>
          There is no meal
        <% else %>
          <% @meals.each do |meal| %>
            <div class="col-xs-6">
              <%= render 'meals/meal_card', meal: meal %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-xs-6">
      <h3>Map</h3>
    </div>
  </div>
</div>
