<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <h1>New restaurant </h1>

      <% simple_form_for @restaurants do |form| %>
        <%= form.input :name %>
        <%= form.input :price %>
        <%= form.input :prep_time, as: :integer %>
        <%= form.input :description, as: :text, placeholder: 'The meal is as follow ...'%>
        <%= form.association :meal_type %>
        <%= form.input :picture %>
        <%= form.input :picture_cache, as: :hidden %>
        <%= form.submit class: 'btn btn-primary' %>
    </div>
  </div>
</div>
