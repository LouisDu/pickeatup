<div class="thumbnail">
  <%= image_tag('http://unsplash.it/300/200', class: 'img-responsive') %>
  <div class="caption">
    <h3><%= meal.name %></h3>
    <p><%= meal.prep_time %></p>
    <p><%= meal.price %></p>
    <p><%= meal.description %></p>
    <%= link_to "Show", meal_path(meal), class: "btn btn-default", role: "button" %>
    <%= link_to 'Edit', edit_restaurant_meal_path(@restaurant, meal), class: "btn btn-default", role: "button" %>
    <%= link_to 'Delete', restaurant_meal_path(@restaurant, meal), method: :delete, class: "btn btn-default", role: "button" %>
  </div>
</div>
