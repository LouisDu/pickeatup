<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <% if @meal.logo.any? %>
        <%= @meal.logo %>
      <% end %>
    </div>
    <div class="col-xs-10">
      <h1><%= @meal.name %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <div class="col-xs-12">
        <h2>Reviews</h2>
        <% if @meal.reviews.any? %>
          <% @meal.reviews.each do |review| %>
            <%= render 'review', review: review %>
        <% else %>
          <p>Be the first to leave a review</p>

      </div>
      <div class="col-xs-12">
        <h3>What did you think ?</h3>
        <%= simple_form_for [@meal, @review], html: { class: 'form' } do |f| %>
          <%= f.input :content %>
          <%= f.input :rating, collection: 0..5 %>
          <%= f.button :submit, class: 'btn btn-primary' %>

      </div>

    </div>
    <div class="col-xs-6">
      <h3>Restaurant location</h3>
    </div>
  </div>
</div>
