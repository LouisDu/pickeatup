<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <h3>Historique des commandes</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <% if @orders.length == 0 %>
          <p>Pas de commande</p>
      <% else %>
        <% @orders.each do |order| %>
          <%= render 'orders/show', order: order %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
