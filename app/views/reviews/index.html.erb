<div class="container">
  <div class="row">
    <div class="col-xs-6">
    <!-- Definir la class left-col sur cette base  height: 89.5vh (la ca fonctionne pour un right col) -->
      <div class="row">
        <div class="col-xs-12">
          <%= render 'meals/meal_card', meal: @meal %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <%= simple_form_for [@meal, @review] do |form| %>
            <%= form.input :content %>
            <%= form.input :rating, collection: 0..5 %>
            <%= form.button :submit, class: 'btn btn-default' %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-xs-6">
      <div class="row">
        <div class="col-xs-12 text-center">
          <h1>Les avis</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <% if @meal.reviews.any? %>
            <% @meal.reviews.each do |review| %>
              <%= render 'review_card', review: review %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

