<div class="container">
  <div class="row">

    <div class="col-xs-6">
      <h3>Restaurant meals</h3>
      <div class="row">
        <div class="col-xs-12">
          <% if @restaurant.meals.blank? %>
              There is no meal
          <% else %>
            <% @restaurant.meals.each do |meal| %>
              <div class="col-xs-6">
                <%= render 'meals/meal_card_restaurant_owner', meal: meal %>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="col-xs-12">
          <%= link_to 'Add a meal', new_restaurant_meal_path(@restaurant) %>
        </div>
      </div>

    </div>

    <div class="col-xs-6">
      <h1><%= @restaurant.name %></h1>

      <% if @restaurant.logo.presence %>
        <%= image_tag image_path(@restaurant.logo)%>
      <% end %>

      <h2><%= @restaurant.address %></h2>
    </div>

  </div>
</div>
